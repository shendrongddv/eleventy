{%set postRecent = collections.posts | limit(5) %}
        <div class="card">
            <div class="card-body">
                <h6>RECENT POSTS</h6>
        {% for post in postRecent | reverse %}        
                <p><a href="{{ post.url }}">{{ post.data.title }}</a>
                <hr/></p>    
        {% endfor %}
            </div>
        </div>